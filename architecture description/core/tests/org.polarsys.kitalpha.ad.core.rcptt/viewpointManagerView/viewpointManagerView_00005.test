get-view "Project Explorer" | get-tree | select "A/My.componentsample" | double-click
get-view "Viewpoint Manager" | get-table | select "Component Sample Performance" | get-menu "Start use" | click
with [get-editor "My.componentsample" | get-tree] {
    get-item "platform:\\/resource\\/A\\/My.componentsample/\\[Component Model\\]/\\[Component Package\\]/\\[Hardware Component\\]" 
        | click
    select "platform:\\/resource\\/A\\/My.componentsample/[Component Model]/[Component Package]/[Hardware Component]" 
        | get-menu "New Child/Performance" | click
}
get-view "Viewpoint Manager" | get-table | select "Component Sample Performance" | get-menu Hide | click
get-editor "My.componentsample" | get-tree 
    | get-item "platform:\\/resource\\/A\\/My.componentsample/\\[Component Model\\]/\\[Component Package\\]/\\[Hardware Component\\]" 
    | get-property childCount | equals 0 | verify-true
with [get-view "Viewpoint Manager" | get-table] {
    get-item "Component Sample Performance" | get-property "values['Version']" | equals "no version" | verify-true
    get-item "Component Sample Performance" | get-property "values['Name']" | equals "Component Sample Performance" 
        | verify-true
    get-item "Component Sample Performance" | get-property "values['State']" | equals "Used & filtered" | verify-true
}
get-view "Viewpoint Manager" | get-table | select "Component Sample Performance"
with [get-view "Viewpoint Manager" | get-table] {
    get-menu Hide | get-property enablement | equals false | verify-true
    get-menu Show | get-property enablement | equals true | verify-true
}
get-view "Viewpoint Manager" | get-table | select "Component Sample Performance" | get-menu Show | click
with [get-view "Viewpoint Manager" | get-table] {
    get-item "Component Sample Performance" | get-property "values['Version']" | equals "no version" | verify-true
    get-item "Component Sample Performance" | get-property "values['Name']" | equals "Component Sample Performance" 
        | verify-true
    get-item "Component Sample Performance" | get-property "values['State']" | equals Used | verify-true
}
get-editor "My.componentsample" | get-tree 
    | get-item "platform:\\/resource\\/A\\/My.componentsample/\\[Component Model\\]/\\[Component Package\\]/\\[Hardware Component\\]" 
    | get-property childCount | equals 1 | verify-true
