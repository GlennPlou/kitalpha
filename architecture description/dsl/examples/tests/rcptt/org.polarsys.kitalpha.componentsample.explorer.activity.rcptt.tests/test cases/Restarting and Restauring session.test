openSession -projectName "org.polarsys.kitalpha.vp.componentsample.runtime.model" -airdName "model/VideoOnDemand.aird"
get-menu "File/Restart" | click
wait-until-eclipse-is-ready
with [get-tab-folder -index 2] {
    get-property "pages[0]" | equals "Video On Demande - Activity Explorer" | verify-true
    get-property activePage | equals "Video On Demande - Activity Explorer" | verify-true
}
with [get-editor "Video On Demande - Activity Explorer"] {
    get-tab-folder | get-tab-item "Component Sample Architecture" | click
    get-section "Diagrams Viewer" | get-tree 
        | select "ComponentSample/ComponentSampleDiagram/Video on demand Architecture" | double-click
}
get-menu "File/Save All" | click

//delete this when automatic opening of AEx will be fixed
get-preferences-menu | click
with [get-window Preferences] {
    get-tree | select "Activity Explorer"
    get-button "Open Activity Explorer Editor during the session opening." | uncheck
    get-button Apply | click
    get-button OK | click
}

get-menu "File/Restart" | click
wait-until-eclipse-is-ready
with [get-tab-folder -index 2] {
    get-property activePage | equals "Video on demand Architecture" | verify-true
    get-property tabCount | equals 2 | verify-true 
}
get-view "Project Explorer" | get-tree 
    | select "org.polarsys.kitalpha.vp.componentsample.runtime.model/model/VideoOnDemand.aird" | get-menu Close | click
